    <script>

        $("#linkRegistrate").click(function () {
            $("#formLogin").hide();
            $("#formRegister").show();

        })
        $("#linkEntrar").click(function () {
            $("#formLogin").show();
            $("#formRegister").hide();
        })
        $("#linkRecuperar").click(function () {
            $("#formRecupera").hide();
            $("#formLogin").show();
        })

        $("#linkVamosRecuperar").click(function () {
            $("#formRecupera").show();
            $("#formLogin").hide();
        })

    </script>
