    <div class="modal" tabindex="-1" role="dialog" id="loginModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="login-image">
                        <img src="~/images/header-logo-2.png" alt="" class="img-fluid" />
                    </div>

                    <form id="formLogin" action="~/Account/Login" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="heading color" style="text-align:center">
                                    <h2 style="text-transform: uppercase; font-size: 20px;"> Hola, Bienvenido a la pesca en linea</h2>
                                    <img src="~/images/header-border.png" alt="" class="img-fluid" />
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="txtEmail" class="text-gris">Correo electronico</label>
                                    <input type="email" class="form-control" id="txtEmail" placeholder="Captura tu correo electronico">
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="txtPassword" class="text-gris">Contraseña</label>
                                    <input type="password" class="form-control" id="txtPassword" placeholder="Captura tu contraseña">
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="chkRemember">
                                            <label class="form-check-label text-gris" for="chkRemember">Recordar mi cuenta</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="text-azul">Olvidaste tu contraseña</label>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-lg-12" style="text-align:center">

                                <button type="submit" class="btn btn-primary button-form btnAjaxAdd" data-formulario="#formLogin">Entrar a Ghh</button>
                            </div>

                            <div class="col-lg-12" style="text-align:center; padding: 30px 0 0 0;">
                                <div class="form-group">
                                    <label class="text-azul" style="cursor:pointer;" id="linkRegistrate">Reistrate aquí</label>
                                </div>

                            </div>

                        </div>
                    </form>

                    <form id="formRecupera" action="~/Account/RecuperarPass" method="post" style="display:none">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="heading color" style="text-align:center">
                                    <h2 style="font-size: 20px;text-transform:uppercase">Recuperar contraseña de La Pesca en Línea</h2>
                                    <img src="/images/header-border.png" alt="shap" class="img-fluid">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="txtEmail" class="text-gris">Correo electrónico</label>
                                    <input type="email" class="form-control" id="txtEmail" name="Email" required placeholder="Camptura tu correo electrónico">
                                </div>
                            </div>
                            <div class="col-lg-12" style="text-align:center;">
                                <button type="submit" class="btn btn-primary button-form btnAjaxAdd" data-formulario="#formRecupera">Recuperar contraseña</button>
                            </div>
                            <div class="col-lg-12" style="text-align: center;padding: 30px 0 0 0;">
                                <div class="form-group">
                                    <label class="text-azul" style="cursor:pointer;" id="linkRecuperar">Entrar a la Pesca en Línea</label>
                                </div>
                            </div>
                        </div>
                    </form>

                    <form id="formRegister" action="~/Account/Register" method="post" style="display:none;">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="heading color" style="text-align:center">
                                    <h2 style="font-size: 20px;text-transform:uppercase">Registro a La Pesca en Línea</h2>
                                    <img src="/images/header-border.png" alt="shap" class="img-fluid">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="txtName" class="text-gris">Nombre</label>
                                    <input type="text" class="form-control" id="txtName" name="Nombre" required placeholder="Camptura tu nombre">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="txtEmail" class="text-gris">Correo electrónico</label>
                                    <input type="email" class="form-control" id="txtEmail" name="Email" required placeholder="Camptura tu correo electrónico">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="txtPassword" class="text-gris">Contraseña</label>
                                    <input type="password" class="form-control" id="txtPassword" name="Password" required placeholder="Captura tu contraseña">
                                </div>
                            </div>
                            <div class="col-lg-12" style="text-align:center;">
                                <button type="submit" class="btn btn-primary button-form btnAjaxAdd" data-formulario="#formRegister">Registrarme en la Pesca en Línea</button>
                            </div>
                            <div class="col-lg-12" style="text-align: center;padding: 30px 0 0 0;">
                                <div class="form-group">
                                    <label class="text-azul" style="cursor:pointer;" id="linkEntrar">Entrar a la Pesca en Línea</label>
                                </div>
                            </div>
                        </div>
                    </form>


                </div>
            </div>

        </div>
    </div>




